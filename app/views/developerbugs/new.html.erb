<% content_for :title, "Create" %>
<% content_for :page_title, "Create Bug or feature on project" %>


<% @bug.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger container"><%= msg %></div>
<% end %>

<%= form_with(model: @bug , url: project_developerbugs_path , method: :post) do |form| %>
<div class="container my-5">
    <div class="form-group">
        <label for="title">Enter Name</label><br />
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <label for="postname">Enter Type</label><br />
        <%= form.select :type,[:Feature, :Bug] ,{}, {class: "form-control"} %></br>
    </div>
    <div class="form-group">
        <label for="postname">Enter Description</label><br />
        <%= form.text_area :description, class: "form-control project_text_area" %></br>
    </div>

    <div class="text-center">
        <%= form.submit "Add", class: "btn btn-secondary"%>
    </div>
<% end %>