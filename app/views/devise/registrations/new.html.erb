<% content_for :title, "Sign Up" %>
<div class="container signup_maindiv">
<h2 class="text-center signupHeading">Sign up</h2>
 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "signup_input_f"%>
  </div>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "signup_input_f"%>
  </div>

  <div class="field my-2">
    <%= f.label :type %><br />
    <%= f.select :type, [:Manager, :Developer, :Qa], {}, {class: "signup_input_f"} %>
  </div>

  <div class="field my-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "signup_input_f"%>
  </div>

  <div class="field my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "signup_input_f"%>
  </div>

  <div class="actions my-3 text-center">
    <%= f.submit "Sign up" , class: "btn btn-primary signup_btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
