<%= form_with model: project  do |form| %>
<div class="container my-5">
    <div class="form-group">
        <label for="title">Enter Name</label><br />
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <label for="postname">Enter Description</label><br />
        <%= form.text_area :description, class: "form-control project_text_area" %></br>
    </div>
    <div class="text-center">
        <%= form.submit project.persisted? ? "Updata Project" : "Add Project", class: "btn btn-secondary"%>
    </div>
</div>
<% end %>